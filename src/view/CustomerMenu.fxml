<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerMenu">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="76.0" prefHeight="300.0" prefWidth="500.0" spacing="10.0">
         <children>
            <TableView fx:id="custTableView" minHeight="275.0" minWidth="504.0" prefHeight="275.0" prefWidth="504.0">
              <columns>
                <TableColumn fx:id="custIDCol" prefWidth="84.0" text="Customer ID" />
                <TableColumn fx:id="custNameCol" prefWidth="84.0" text="Name" />
                  <TableColumn fx:id="custAddCol" prefWidth="84.0" text="Address" />
                  <TableColumn fx:id="custCodeCol" prefWidth="84.0" text="Postal Code" />
                  <TableColumn fx:id="custPhoneCol" prefWidth="84.0" text="Phone #" />
                  <TableColumn fx:id="custFDLCol" prefWidth="84.0" text="FDL" />
              </columns>
            </TableView>
            <HBox alignment="BASELINE_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onActionAddCustBttn" text="Add" />
                  <Button mnemonicParsing="false" onAction="#onActionUpCustBttn" text="Update" />
                  <Button mnemonicParsing="false" onAction="#onActionDelCustBttn" text="Delete" />
                  <Button mnemonicParsing="false" onAction="#onActionAddAppBttn" text="Add Appointment" />
                  <Button mnemonicParsing="false" onAction="#onActionCustBackBttn" text="Back" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label layoutX="14.0" layoutY="29.0" text="Customer Information">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
